<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEmployeeActivity"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/purple">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purplee"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        />
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/agbalumo"
                android:text="Mettre ò jour"
                android:textAlignment="center"
                android:textColor="@color/purplee"
                android:textSize="30sp"
                android:textStyle="bold" />
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/img_16"
                android:id="@+id/uploadImage"

                android:scaleType="fitXY"
                android:layout_marginBottom="50dp"/>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editTxtName"
                android:drawablePadding="8dp"
                android:hint="Non"
                android:padding="8dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/baseline_move_up_24"/>

            <EditText

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editTextPlateNumber"
                android:drawablePadding="8dp"
                android:hint="Plaque"
                android:padding="8dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/baseline_10mp_24"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Mettre à jour"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple"
                android:textColor="@color/purplee"
                android:id="@+id/buttonUpdate"
                android:layout_marginBottom="50dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>