<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEmployeeActivity"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/purple">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purplee"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agbalumo"
                android:text="Ajouter Employee"
                android:textAlignment="center"
                android:textColor="@color/purplee"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/img_11"
                android:id="@+id/uploadImage"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="20dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editTextName"
                android:drawablePadding="8dp"
                android:hint="Non de l'employe"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/baseline_group_add_24"/>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editTextPlate"
                android:drawablePadding="8dp"
                android:hint="Plaque"
                android:padding="8dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/baseline_commute_24"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Enregistrer"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple"
                android:textColor="@color/purplee"
                android:id="@+id/buttonSave"
                android:layout_marginBottom="25dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
