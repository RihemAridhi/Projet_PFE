<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminInfoActivity"
    android:padding="24dp"
    android:background="@color/purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purplee"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_marginBottom="1dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:elevation="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@android:color/white">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/img_13"
                    android:id="@+id/uploadImage"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/textViewFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/agbalumo"
                    android:text="   Nom complet :"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/baseline_account_box_24"/>

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/agbalumo"
                    android:text="  Email :"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/baseline_attach_email_24"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/editTextCurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/baseline_delete_sweep_24"
                        android:drawablePadding="8dp"
                        android:hint="  mot de passe acuel"
                        android:paddingEnd="48dp"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:textColorHighlight="@color/cardview_dark_background"/>

                    <ImageView
                        android:id="@+id/eyeIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/baseline_remove_red_eye_24" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/editTextNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/baseline_password_24"
                        android:drawablePadding="8dp"
                        android:hint="  Nouveau mot de passe "
                        android:paddingEnd="48dp"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:textColorHighlight="@color/cardview_dark_background"/>

                    <ImageView
                        android:id="@+id/eyeIco"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/baseline_remove_red_eye_24" />
                </RelativeLayout>

                <Button
                    android:id="@+id/buttonUpdatePassword"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/purple_500"
                    android:text="Mettre Ã  jour le mot de passe"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="25dp"/>
                <TextView
                    android:id="@+id/listeAdmins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir les adminastrateurs"
                    android:textColor="#0000FF"
                    android:textSize="14sp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>