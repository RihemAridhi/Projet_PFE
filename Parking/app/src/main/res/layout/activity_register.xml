<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/purple">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/agbalumo"
                android:text="CrÃ©er un compte  "
                android:textAlignment="center"
                android:textColor="@color/purplee"
                android:textSize="36sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/img28"
                android:id="@+id/uploadImage"
                android:layout_marginTop="1dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editTexRegEmail"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="1dp"
                android:drawableLeft="@drawable/baseline_mark_email_read_24"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editTexRegPasswo"
                android:drawablePadding="8dp"
                android:hint="Non"
                android:padding="8dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/baseline_account_box_24"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/editTexRegPasswor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:drawablePadding="8dp"
                    android:hint="mot de passse "
                    android:paddingEnd="48dp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:drawableLeft="@drawable/baseline_password_24"/>
                <ImageView
                    android:id="@+id/eyeIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/baseline_remove_red_eye_24" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/editTexRegPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:drawablePadding="8dp"
                    android:hint="confirme mot de passe "
                    android:paddingEnd="48dp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:drawableLeft="@drawable/baseline_password_24"/>
                <ImageView
                    android:id="@+id/eyeIconn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/baseline_remove_red_eye_24" />
            </RelativeLayout>

            <Button
                android:id="@+id/Regbutton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="enregister"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/purple"
                android:textColor="@color/purplee"
                app:cornerRadius = "20dp"
                />
            <TextView
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a un compte ??"
                android:textColor="#0000FF"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>